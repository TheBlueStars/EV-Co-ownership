{
  "info": {
    "name": "EVCoOwner API Test Collection",
    "_postman_id": "evcoowner-collection-001",
    "description": "Postman test collection for Auth, Group, Booking, and Payment APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/api/auth/register" },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"datnt\",\n  \"password\": \"123456\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/api/auth/login" },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"datnt\",\n  \"password\": \"123456\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Get Profile (/users/me)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "url": { "raw": "{{baseUrl}}/api/users/me" }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Group & Ownership",
      "item": [
        {
          "name": "Create Group",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/groups" },
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"EV Group 1\"\n}" }
          },
          "response": []
        },
        {
          "name": "Add Member to Group",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/groups/1/members"
            },
            "body": { "mode": "raw", "raw": "{\n  \"userId\": 2\n}" }
          },
          "response": []
        },
        {
          "name": "Update Ownership %",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/groups/1/members/2/ownership"
            },
            "body": { "mode": "raw", "raw": "{\n  \"percent\": 30\n}" }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Booking",
      "item": [
        {
          "name": "Get Available Vehicles",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/api/bookings/available?start=2025-11-02T08:00&end=2025-11-02T10:00&groupId=1"
            }
          },
          "response": []
        },
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/bookings" },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vehicleId\": 1,\n  \"startTime\": \"2025-11-02T08:00\",\n  \"endTime\": \"2025-11-02T10:00\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Check-in Booking",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/bookings/1/checkin" }
          },
          "response": []
        },
        {
          "name": "Check-out Booking",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/bookings/1/checkout" }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payment",
      "item": [
        {
          "name": "Get My Payments",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/payments" }
          },
          "response": []
        },
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/payments" },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 200000,\n  \"method\": \"BANKING\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Webhook Mock (Paid)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/payments/webhook" },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentId\": 1,\n  \"status\": \"PAID\"\n}"
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "jwtToken", "value": "" }
  ]
}
